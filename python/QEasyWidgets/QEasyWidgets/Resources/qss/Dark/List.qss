ListBase {
	/*text-align: center;*/
	background-color: transparent;
    padding: 1.2px;
	border: none;
	border-radius: 3px;
    outline: none;
}
ListBase[isBorderless=false] {
    padding: 0px;
    border: 1.2px solid rgba(201, 210, 222, 123);
}
ListBase:hover {
    border-color: rgba(201, 210, 222, 210);
}

ListBase::item {
    color: rgb(210, 222, 234);
	background-color: transparent;
    border: 2.4px solid transparent;
	padding: 2.4px;
}
ListBase::item:hover {
	background-color: rgba(201, 210, 222, 33);
}
ListBase::item:selected {
	background-color: transparent;
	border-left-color: rgb(120, 180, 240);
	/*padding-left: 1.2px;*/
}